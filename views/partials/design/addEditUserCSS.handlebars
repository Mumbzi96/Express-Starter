<style>
    .home-section-container{
        padding-top: 70px;
        height: 100vh;
        overflow-x: hidden;
        left: 78px;
        width: calc(100% - 78px);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .userContainer{
        position: relative;
        width: 50vw;
        max-width: 700px;
        background-color: #fff;

        backdrop-filter: blur(7px);
        box-shadow: 0 .4rem .8rem #0005;
        border-radius: .8rem;

        margin: 0 auto;
        overflow: hidden;
    }

    /*----------------- Styling the header part ------------------*/
    .userContainer .header{
        width: 100%;
        height: 60px;
        background-color: #122543;
        padding: .8rem 1rem;
        color: white;

        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .userContainer .header .link{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .userContainer .header h1{
        {{#if (isEqual navdata.language "English")}}
        margin-left: 10px;
        {{else}}
        margin-right: 10px;
        {{/if}}
        font-size: 1.17em;
    }
    .userContainer .header .link a{
        text-align: center;
        color: #fff;
        text-decoration: none;
        font-size: 1.17em;
        width: 20px;
        height: 40px;  
    }
    .userContainer .header .link a:hover{
        color: #e2ff65;
    }
    .userContainer .header .link a i{
        line-height: 42px;
    }

    /* ---------- Error Message ---------- */
    .header .error span{
        border-radius: 10px;
        padding: 5px;
    }

    /* ========== Styling the User_Details ========== */
    .userContainer form .user-details{
        width: 95%;
        max-height: calc(89% - 1.6rem);
        background-color: #fff;

        margin: .8rem auto;
        border-radius: .6rem;
    }
    form .user-details .input-box{
        margin-bottom: 3px;
        width: 100%;
    }
    label.detail{
        margin-bottom: 5px;
        font-weight: 500;
        display: block;
        color:#0b1629;
    }
    .userContainer form input[type="text"], input[type="password"],
    input[type="email"]{
        height: 45px;
        width: 100%;
        outline: none;
        border-radius: 10px;
        border: 1px solid #ccc;
        {{#if (isEqual navdata.language "English")}}
        padding-left: 15px;
        {{else}}
        padding-right: 15px;
        {{/if}}
        font-size: 16px;
        border-bottom-width: 2px;
    }
    .user-details .input-box input:focus,
    .user-details .input-box input:valid{
        border-color: #8cc4df;
    }
    
    /* ---------- Submit Button ---------- */
    form button[type="submit"]{
        height: 50px;
        width: 98%;
        margin-left: 1%;
        margin-right: 1%;
        margin-top: 4px;
        margin-bottom: 5px;
        outline: none;
        color: #fff;
        border-radius: 10px;
        border: none;
        font-size: 18px;
        font-weight: 500;
        letter-spacing: 1px;
        background: #71b7e6;
    }

    /* ---------- Select User Type ---------- */
    select {
        width: 100%;
        padding: 10px 20px;
        border:2px solid #8cc4df;
        border-radius: 10px;
        background-color: #f2f2f2;
        color: #333;
        font-size: 16px;
        cursor: pointer;
    }

    /* Add a custom arrow to the dropdown (using a Unicode character) */
    select:after {
        content: '\25BC'; /* Down arrow Unicode */
        position: absolute;
        top: 50%;
        right: 25px;
        transform: translateY(-50%);
        pointer-events: none; /* So it doesn't interfere with the select functionality */
    }

    /* Wrap the select in a container to position the pseudo-element correctly */
    .select-wrapper {
        width: 100%;
        position: relative;
        display: inline-block;
    }

    .check-box{
        margin-top: 3px;
        margin-bottom: 3px;
        display: none;
    }

    .check-box .checkbox-container{
        display: block;
        {{#if (isEqual navdata.language "English")}}
        margin-left: 5px;
        {{else}}
        margin-right: 5px;
        {{/if}}
        
    }


    @media screen and (orientation: portrait) {
        .home-section-container{ 
            left: 0;
            width: 100%;
        }
        .userContainer{
            width: 90vw;
        }
    }

    @media screen and (orientation: landscape) and (max-height: 430px) {
        body{
            overflow-y: hidden;
        }
        .home-section-container{
            display: block;
        }
    }
</style>