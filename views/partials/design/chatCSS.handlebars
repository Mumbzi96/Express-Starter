<style>
    
    .home-section-container{
        padding-top: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .sidebar.open ~ .home-section .chat-container{
        transition: all 0.4s ease;
    }

    .sidebar ~ .home-section .chat-box{
        transition: all 0.4s ease;
    }

    /* ========== Chat Container ========== */
    .chat-container {
        width: 500px;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 14px 28px rgba(0,0,0,0.1), 0 10px 10px rgba(0,0,0,0.05);
        position: relative;
    }

    /* ---------- Header ---------- */
    .chat-container .header{
        width: 100%;
        height: 12%;
        background-color: #122543;
        padding: .8rem 1rem;
        color: white;

        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-container .header .link{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .chat-container .header h1{
        margin-left: 10px;
        font-size: 1.17em;
    }
    .chat-container .header .link a{
        text-align: center;
        color: #fff;
        text-decoration: none;
        font-size: 1.17em;
        width: 20px;
        height: 40px;
        
    }
    .chat-container .header .link a:hover{
        color: #e2ff65;
    }
    .chat-container .header .link a i{
        line-height: 42px;
    }

    /* ---------- Chat Box ---------- */
    .chat-container .chat-box {
        min-height: 55vh;
        max-height: 55vh;
        overflow-y: scroll;
        padding: 20px;
    }

    .chat-box .messages {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    .messages .message {
        margin: 12px 0;
        display: flex;
    }

    .message.from {
        justify-content: flex-end;
    }

    .message.to {
        justify-content: flex-start;
    }

    .message .from {
        display: inline-block;
        background-color: #2979ff;
        color: #fff;
        border-radius: 15px 15px 0 15px;
        padding: 8px 15px;
        max-width: 70%;
        overflow-wrap: break-word;
    }

    .message.to .from {
        background-color: #f1f1f1;
        color: #333;
        border-radius: 15px 15px 15px 0;
    }

    /* ---------- Input Container ---------- */
    .input-container {
        background: #122543;
        display: flex;
        justify-content: space-between;
        padding: 15px;
        align-items: center;
        height: 12%;
    }

    .input-message {
        flex-grow: 1;
        width: 416px;
        height: 40px;
        padding: 10px;
        border: none;
        border-radius: 5px;
        outline: none;
        {{#if (isEqual navdata.language "Enlgish")}}
        margin-right: 10px;
        {{else}}
        margin-left: 10px;
        {{/if}}
        resize: none; /* Hides the default resize handle */
        overflow-y: auto; /* Allow scrolling within the textarea */
        max-height: 100px; /* Controls the maximum height */
        transition: height 0.3s ease; /* Add a smooth transition effect */
        scrollbar-width: none;
    }

    /* ---------- Send Button ---------- */
    .send-btn {
        padding: 12px 15px;
        background-color: #2979ff;
        border: none;
        color: #fff;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .send-btn i {
        font-size: 1.2em; /* Adjust size as necessary */
        vertical-align: middle; /* Vertically center the icon in the button */
    }

    .send-btn:hover {
        background-color: #1c6ddc;
    }

   
</style>