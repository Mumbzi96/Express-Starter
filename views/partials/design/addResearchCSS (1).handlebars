        border-radius: .8rem;

        margin: 0 auto;
        overflow: hidden;
    }

    /*----------------- Styling the header part ------------------*/
    .researchContainer .header{
        width: 100%;
        background-color: #122543;
        padding: .8rem 1rem;
        color: white;
        height: 50px;

        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .researchContainer .header .link{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .researchContainer .header h1{
        {{#if (isEqual navdata.language "English")}}
        margin-left: 10px;
