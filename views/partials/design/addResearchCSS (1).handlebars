    form input[type="submit"]{
        height: 54px;
        width: 98%;
        margin-left: 1%;
        margin-right: 1%;   
        margin-bottom: 6px;
        outline: none;
        color: #fff;
        border-radius: 10px;
        border: none;
        font-size: 18px;
        font-weight: 500;
        letter-spacing: 1px;
        background: #8cc4df;
    }

    form input[type="submit"]:hover{
        background-color: #71b7e6;
