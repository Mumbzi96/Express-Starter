    .researchContainer form .research-details{
        width: 95%;
        max-height: calc(89% - 1.6rem);
        background-color: #fff;

        margin: .8rem auto;
        border-radius: .6rem;
    }
    form .research-details .input-box{
        margin-bottom: 10px;
        width: 100%;
    }
    label.detail{
        margin-bottom: 5px;
        font-weight: 500;
        display: block;
        color:#0b1629;
    }
