    }

    .uploaded-area .row .details{
        display: flex;
        margin-left: 10px;
        flex-direction: column;
    }
    .uploaded-area .row .details .size{
        color: #404040;
        font-size: 11px;
    }
    .uploaded-area i.fa-check{
        font-size: 16px;
    }

    @media screen and (orientation: portrait) {
        .researchContainer{
            width: 98vw;
            max-width: 600px;
        }
