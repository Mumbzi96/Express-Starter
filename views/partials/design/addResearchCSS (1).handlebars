<style>
    select {
        width: 100%;
        padding: 10px 20px;
        border:2px solid #8cc4df;
        border-radius: 10px;
        background-color: #f2f2f2;
        color: #333;
        font-size: 16px;
        cursor: pointer;
    }

    /* Add a custom arrow to the dropdown (using a Unicode character) */
    select:after {
        content: '\25BC'; /* Down arrow Unicode */
        position: absolute;
        top: 50%;
        right: 25px;
        transform: translateY(-50%);
        pointer-events: none; /* So it doesn't interfere with the select functionality */
    }

    /* Wrap the select in a container to position the pseudo-element correctly */
    .select-wrapper {
        width: 100%;
        position: relative;
        display: inline-block;
    }

    .research-details .payment-track .radio-label {
        display: flex;
        align-items: center;
        margin-bottom: 10px; /* Add margin below each radio button */
