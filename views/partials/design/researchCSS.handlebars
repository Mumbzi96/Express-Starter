        padding-bottom: 5px;
        margin-bottom: 10px;
    }

    .hiddenCommentDiv .comment .comment-content {
        color: #8cc4df;
    }

    /* ========== Checkbox for Mediator Feature ========== */
    /* Base styles for the custom checkbox */
    .custom-checkbox {
        position: absolute; 
        top: 10px; /* Adjust to move it slightly down from the very top */
        right: 10px; /* Adjust to move it slightly left from the very right */
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

    .custom-checkbox input[type="checkbox"] {
        display: none;
    }

    .checkmark {
        position: absolute;
        top: 0;
        left: 0;
        height: 20px;
        width: 20px;
        background-color: #2c2c2c;
        border-radius: 50%;
        transition: all 0.3s ease; /* Smooth transition for better UX */
    }

    /* Styles for when the checkbox is checked */
    .custom-checkbox input:checked ~ .checkmark {
        background-color: #3498db; /* Blue color */
        border-color: #3498db; /* Blue border color */
        box-shadow: 0 0 5px rgba(52, 152, 219, 0.5); /* Light blue shadow for some depth */
    }

    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
        left: 6px;
        top: 3.5px;
        width: 5px;
        height: 9px;
        border: solid white;
        border-width: 0 2px 2px 0;
        transform: rotate(35deg);
    }

    .custom-checkbox input:checked ~ .checkmark:after {
        display: block;
        transition: width 0.2s ease, height 0.2s ease;
    }

    .button-container {
