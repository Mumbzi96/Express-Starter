        height: 320px;
        border-radius: 10px;
        position: relative;
        overflow: hidden;
        transition: transform 0.6s; /* this creates the smooth scaling effect */
    }

    .card .container{
        position: relative;
        clip-path: polygon(0 18%,100% 0, 100% 100%, 0 100%);
    }

    .card .details{
        padding: 20px 10px;
        width: 100%;
        height: 130px;
        border-radius: 0 0 10px 10px;
        background: #e2ff65;
        position: absolute;
