    }

    .hiddenCommentDiv::-webkit-scrollbar {
        display: none;
    }
    
    .hiddenCommentDiv .close-wrapper{
        width: 100%;
        color: #e2ff65;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px;
    }
    .hiddenCommentDiv .close-wrapper .close-btn {
       text-decoration: none;
        color: #8cc4df;
        transition: all 0.3s;
        width: 22px;
        height: 22px;
        border-radius: 50%;
        padding-left: 3px;
    }

    .hiddenCommentDiv .close-wrapper .close-btn i {  /* Style the icon itself */
        font-size: 22px;
        background-color: transparent;
        border-radius: 50%;  /* Prepare for the circular hover effect */
    }
    

    .hiddenCommentDiv .close-wrapper .close-btn:hover{
        background-color: #e2ff65;
    }
    
    .hiddenCommentDiv .comment {
