    }

    .header h1{
        border-bottom: 3px solid #122543;
        font-size: 22px;
    }

    /* ---------- Search Bar ---------- */
    .header .input-group {
        width: 35%;
        height: 36px;
        background-color: #fffa;
        padding: 0 .8rem;
        border-radius: 10px;
        color: #0b1629;
